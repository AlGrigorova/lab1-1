	public int Add(String numbers)
	{
		int sum = 0;
        if (numbers.length()==0)
        {
        	return 0;
        }
	   
		else 
		{
	    String [] arr=numbers.split(",|\\\\n");
	    
		for (int i = 0;i<arr.length;i++)
		{
			
			sum = sum +Integer.parseInt(arr[i]);
		}
		}
		return sum;
	}
	public int Add(String numbers,char ch)
	{
		int sum = 0;
		String str = ""+ch;
	    String [] arr=numbers.split(str);
	    ArrayList<Integer> negativeList=new ArrayList<Integer>();
		for (int i = 0;i<arr.length;i++)
		{
			int num = Integer.parseInt(arr[i]);
			if (num < 0)
            negativeList.add(num);
			if (num>1000)
				continue;
			sum = sum +Integer.parseInt(arr[i]);
		}
		 if (negativeList.size() > 0) {
			  throw new RuntimeException("Negatives not allowed: " + negativeList.toString());
		   } 
		return sum;
	}

